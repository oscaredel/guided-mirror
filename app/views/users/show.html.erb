<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-3">
      <div class="user-image" style="background-image:url('<%= image_path @user.image %>');"></div>
    </div>
    <div class="col-xs-12 col-md-9">
      <div>
        <h1>
          <%= @user.first_name + " " + @user.last_name %>
        </h1>
      </div>
      <div>
        <strong>City: </strong><%= @user.city %>
      </div>
      <div>
        <%= @user.description %>
      </div>
    </div>
  </div>
  <div>
    <h3>Stories by <%= @user.first_name %></h3>
  <%= render 'stories/story_list', stories: @stories %>
<div class="text-align-center-div">

  <%= link_to "Upload a new story", new_story_path, class: "btn btn-success story-upload-btn" %>
</div>
  </div>
</div>


