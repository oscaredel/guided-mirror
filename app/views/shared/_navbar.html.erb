<div class="navbar-wagon-wrapper">
  <!-- Logo -->
  <div class="container">
    <div class="navbar-wagon">

      <%= link_to root_path, class: "navbar-wagon-brand" do %>
      <%= image_tag("guided_icon.png", style: "height: 60px;") %>
      <!-- <%= image_tag("guided.png") %> -->
      <% end %>

      <!-- Right Navigation -->
      <div class="navbar-wagon-right hidden-xs hidden-sm">

        <% if user_signed_in? %>

        <!-- Links when logged in -->
        <%= link_to "Landmarks", landmarks_path, class: "navbar-wagon-item navbar-wagon-link" %>
        <%= link_to "Stories", stories_path, class: "navbar-wagon-item navbar-wagon-link" %>
        <%= link_to user_path(current_user) do %>
        <div class="avatar" style="background-image:url('<%= image_path current_user.image %>');"></div>
        <% end %>

        <div class="navbar-wagon-item">
        <div class="dropdown">
          <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <% if user_signed_in? %>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
              <i class="fa fa-fw fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
              <% end %>
            </li>
            <% else %>
            <li>
              <%= link_to new_user_session_path do %>
              <i class="fa fa-fw fa-sign-in" aria-hidden="true"></i> <%= t(".sign_in", default: "Login") %>
              <% end %>
            </li>
            <% end %>
          </ul>
        </div>
      </div>

        <!-- Avatar with dropdown menu -->

        <% else %>
        <!-- Login link (when logged out) -->
        <%= link_to "Landmarks", landmarks_path, class: "navbar-wagon-item navbar-wagon-link" %>
        <%= link_to "Stories", stories_path, class: "navbar-wagon-item navbar-wagon-link" %>
        <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %>
        <% end %>
      </div>

      <!-- Dropdown list appearing on mobile only -->
      <div class="navbar-wagon-item hidden-md hidden-lg">
        <div class="dropdown">
          <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li>
              <%= link_to landmarks_path do %>
              <i class="fa fa-fw fa-map-marker" aria-hidden="true"></i> Landmarks
              <% end %>
            </li>
            <li>
              <%= link_to stories_path do %>
              <i class="fa fa-fw fa-headphones" aria-hidden="true"></i> Stories
              <% end %>
            </li>
            <% if user_signed_in? %>
            <li>
              <%= link_to user_path(current_user) do %>
              <i class="fa fa-fw fa-user"></i> <%= t(".profile", default: "Profile") %>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
              <i class="fa fa-fw fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
              <% end %>
            </li>
            <% else %>
            <li>
              <%= link_to new_user_session_path do %>
              <i class="fa fa-fw fa-sign-in" aria-hidden="true"></i> <%= t(".sign_in", default: "Login") %>
              <% end %>
            </li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
